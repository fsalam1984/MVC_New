<div class="text-center">
  <h2>{{name}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  
</div>


{{!-- form for adding a comment --}}
 <form class="form comment-project-form">
      <div class="form-group">
        <label for="project-name">Comment:</label>
        
        <textarea  id="project-comment" name="project-comment" >Enter comment</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
       <div class="form-group">
 
      {{#if post.comments}}
      <div class="col-md-6 card">
        <div class="card-header" >
          <h3>Current Comments:</h3>
        </div>
          <div class="card-body">
            {{#each post.comments as |comment|}}
            {{> comments}}
            {{/each}}
        </div>
        {{/if}}


    </form>

    <script src="../public/js/comment.js"></script>